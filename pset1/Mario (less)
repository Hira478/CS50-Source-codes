#include <stdio.h>
#include <cs50.h>

int main(void)
{
    // Promp inclusive number 1-8 from user
    int n;
    do
    {
        n = get_int("Height: ");
    }
    while(n < 1 || n > 8);

    //for loops hash and print out the block / hash
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (j + i < n - 1)
            {
                printf(" ");
            } else {
                printf("#");
            }
        }
    printf("\n");
    }
}
